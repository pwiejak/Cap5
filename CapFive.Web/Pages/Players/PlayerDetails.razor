@page "/player"
@page "/player/{Id:int}"
@inherits PlayerDetailsBase
@using CapFive.Web.Pages.Common

@if (Player == null && string.IsNullOrWhiteSpace(ErrorMessage))
{
    <Spinner />
}
else if (!string.IsNullOrWhiteSpace(ErrorMessage))
{
    <DisplayError ErrorMessage="@ErrorMessage"></DisplayError>
}
else
{
    <PlayerForm PlayerDetails="@Player" />
}